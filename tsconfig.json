{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2018",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true
  },
  "include": ["src/**/*"]
}
